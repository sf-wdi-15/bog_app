<form action="/bogs/<%= @bog.id %>" method="post">
	<input name="_method" type="hidden" value="put" />
    <input type="text" name="bog[name]" value="<%= @bog.name %>">
    <input type="text" name="bog[design]" value="<%= @bog.design %>">
    <textarea name="bog[description]" value="<%= @bog.description %>"></textarea>
    <%= token_tag form_authenticity_token %>

    <button> Update Bog </button>
</form>