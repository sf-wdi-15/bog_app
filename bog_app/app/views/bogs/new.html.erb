<form action="/bogs" method="post">
  <!-- pass token along with post to prevent cross-site forgery -->
    <%= token_tag form_authenticity_token %>
  
  name:
    <input type="text" name="bog[name]">

  description:
    <textarea name="bog[description]" id="" cols="30" rows="10"></textarea>
    
  <button> Save Creature </button>
</form>